<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ws="http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://jax-ws.dev.java.net/spring/core
        http://jax-ws.dev.java.net/spring/core.xsd
        http://jax-ws.dev.java.net/spring/servlet
        http://jax-ws.dev.java.net/spring/servlet.xsd"
>

    <wss:binding url="/soap">
        <wss:service>
            <ws:service bean="#departmentWs"/>
        </wss:service>
    </wss:binding>

    <!-- Web service methods -->
    <bean id="departmentWs" class="ru.OSHC.webService.DepartmentWebService">
        <property name="departmentService" ref="depService"/>
    </bean>

    <bean id="depService" class="ru.OSHC.service.DepartmentService"/>

</beans>